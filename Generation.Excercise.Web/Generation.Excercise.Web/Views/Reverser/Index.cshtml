@section scripts
{
    <script type="text/javascript">
        $('#input_text').keypress(function (e) {
            if (e.which == 13) {
                $(this).blur();
                $('#test').focus().click();
            }
        });
        $('#test')
            .click(function () {
                var inputText = $("#input_text").val();

                if (inputText === '') {
                    $('.result').text('');
                }

                else {

                    $.ajax({
                        type: "GET",
                        url: "reverser/test",
                        data: { word: inputText },
                        dataType: "json",
                        error: function (xhr, status, error) {
                            // you may need to handle me if the json is invalid
                            // this is the ajax object
                        },
                        success: function (json) {
                            $('.result').text(json);
                        }
                    });
                }

                $('#input_text').focus();

            });

        $('#input_text').focus();
    </script>
}
